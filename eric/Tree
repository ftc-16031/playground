public class Trees {
    public static void main(String[] args) {

        System.out.println("        1");
        System.out.println("       2 2");
        System.out.println("      3   3");
        System.out.println("     4     4");
        System.out.println("    5       5");
        System.out.println("   6         6");
        System.out.println("  7___________7");
        System.out.println("        ||");
        System.out.println("        ||");
    }
}